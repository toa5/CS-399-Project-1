package com.cs399.calculator;

import android.app.Activity;
import android.os.Bundle;
import android.view.Menu;
import android.view.View;
import android.widget.EditText;

public class CalculatorActivity extends Activity 
{
	String str1, str2;
	boolean onStr1;
	Operation operation;
	
    @Override
    protected void onCreate(Bundle savedInstanceState) 
    {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_calculator);
        onStr1 = true;
    }

    @Override
    public boolean onCreateOptionsMenu(Menu menu) 
    {
        // Inflate the menu; this adds items to the action bar if it is present.
        getMenuInflater().inflate(R.menu.calculator, menu);
        return true;
    }
    
    private void setText()
    {	((EditText)findViewById(R.id.textBox)).setText(current);}
    
    public void add1(View view)
    {	
    	current += "1";
    	setText();
    }
    
    public void add2(View view)
    {	
    	current += "2";
    	setText();
    }
    
    public void add3(View view)
    {	
    	current += "3";
    	setText();
    }
    
    public void add4(View view)
    {	
    	current += "4";
    	setText();
    }
    
    public void add5(View view)
    {	
    	current += "5";
    	setText();
    }
    
    public void add6(View view)
    {	
    	current += "6";
    	setText();
    }
    
    public void add7(View view)
    {	
    	current += "7";
    	setText();
    }
    
    public void add8(View view)
    {	
    	current += "8";
    	setText();
    }
    
    public void add9(View view)
    {	
    	current += "9";
    	setText();
    }
    
    public void add0(View view)
    {	
    	current += "0";
    	setText();
    }
    
    public void setAddition(View view)
    {	
    	operation = Operation.ADDITION;
    	if(current == str2)
    	{
    		str1 = calculate(view);
    		str2 = "";
    	}
    	current = str2;
    	setText();
    }
    
    public void setSubtraction(View view)
    {	
    	operation = Operation.SUBTRACTION;
    	if(current == str2)
    	{
    		str1 = calculate(view);
    		str2 = "";
    	}
    	current = str2;
    	setText();
    }
    
    public void setMultiplcation(View view)
    {	
    	operation = Operation.MULTIPLICATION;
    	if(current == str2)
    	{
    		str1 = calculate(view);
    		str2 = "";
    	}
    	current = str2;
    	setText();
    }
    
    public void setDivision(View view)
    {	
    	operation = Operation.DIVISION;
    	if(current == str2)
    	{
    		str1 = calculate(view);
    		str2 = "";
    	}
    	current = str2;
    	setText();
    }
    
    public void clear(View view)
    {
    	str1 = ""; str2 = "";
    	current = str1;
    }
    
    public void back(View view)
    {
    	try
    	{current = current.substring(0, current.length()-1);}
    	catch(IndexOutOfBoundsException i){}
    }
    
    public String calculate(View view)
    {
    	final float num1 = Float.parseFloat(str1),
    				num2 = Float.parseFloat(str2), value;
		switch(operation)
    	{
    		case ADDITION:
    			value = num1+num2;
    			break;
    		case SUBTRACTION:
    			value = num1-num2;
    			break;
    		case MULTIPLICATION:
    			value = num1*num2;
    			break;
    		//case DIVISION:
    		default:
    			value = num1/num2;
    			break;
    	}
		EditText text = (EditText)this.findViewById(R.id.textBox);
		String rval = Float.toString(value);
		text.setText(rval);
    	clear(view);
    	return rval;
    }
}
